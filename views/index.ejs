<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MaxxEnergy Dark Footer with Clickable Modals</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <!-- Bootstrap Icons -->
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  >
  <style>
    /* Overall dark footer styling */
    .footer-area {
      background-color: #343a40;
      padding: 20px 0;
      color: #fff;
      font-size: 14px;
    }
    /* Subscription form styling */
    .subscribe-form {
      display: flex;
      max-width: 300px;
    }
    .subscribe-form input {
      flex: 1;
      padding: 8px;
      border: 1px solid #555;
      border-right: 0;
      border-radius: 4px 0 0 4px;
      outline: none;
      background-color: #fff;  /* White background for contrast */
      color: #000;             /* Dark text for readability */
    }
    .subscribe-form button {
      border: none;
      background: #212529;
      color: #fff;
      padding: 0 12px;
      border-radius: 0 4px 4px 0;
      cursor: pointer;
    }
    /* Social icons styling */
    .social-icons {
      display: inline-flex;
      gap: 0.5rem;
    }
    .social-icons a {
      text-decoration: none;
      color: #fff;
      font-size: 1.25rem;
      transition: color 0.2s ease;
    }
    .social-icons a:hover {
      color: #adb5bd;
    }
    /* Bottom links styling */
    .bottom-links button {
      background: none;
      border: none;
      color: #fff;
      margin: 0 0.5rem;
      font-size: 14px;
      cursor: pointer;
      transition: color 0.2s ease;
    }
    .bottom-links button:hover {
      color: #adb5bd;
    }
    /* Modal styling */
    .modal-content {
      border-radius: 0.5rem;
      box-shadow: 0 0 20px rgba(0,0,0,0.3);
    }
    .modal-header {
      background-color: #495057;
      color: #fff;
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }
  </style>
</head>
<body>

<!-- Footer Start -->
<footer class="footer-area">
  <div class="container">
    <!-- Row 1: Subscription, Logo, Social Icons -->
    <div class="row align-items-center mb-4">
      <!-- Subscription Form (Left) -->
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="subscribe-form">
          <input type="email" placeholder="Enter your email">
          <button type="submit">
            <i class="bi bi-arrow-right"></i>
          </button>
        </div>
      </div>
      <!-- Logo (Center) -->
      <div class="col-md-4 text-center mb-3 mb-md-0">
        <img src="/images/MAXX-Energy-Logo-1B.png" alt="MaxxEnergy Logo" style="max-width: 150px;">
      </div>
      <!-- Social Icons (Right) -->
      <div class="col-md-4 text-md-end text-center">
        <div class="social-icons">
          <a href="https://x.com/MaxxTechnology" target="_blank">
            <i class="bi bi-twitter-x"></i>
          </a>
          <a href="https://www.facebook.com/maxxpotentialllc/" target="_blank">
            <i class="bi bi-facebook"></i>
          </a>
          <a href="https://www.linkedin.com/company/maxx-potential" target="_blank">
            <i class="bi bi-linkedin"></i>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Row 2: Clickable Modal Links Under the Logo -->
    <div class="row mb-3">
      <div class="col text-center bottom-links">
        <button type="button" data-bs-toggle="modal" data-bs-target="#termsModal">Terms</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#aboutModal">About</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#contactModal">Contact</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#careersModal">Careers</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#personalInfoModal">Personal Information Request</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#copyrightModal">Copyright Act</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#policyModal">Policy</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#sitemapModal">Sitemap</button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#browserReqModal">Browser Requirements</button>
      </div>
    </div>
    
    <!-- Row 3: Copyright -->
    <div class="row">
      <div class="col text-center">
        Â© 2025 MaxxEnergy. All rights reserved.
      </div>
    </div>
  </div>
</footer>
<!-- Footer End -->

<!-- Clickable Modals -->

<!-- Terms Modal -->
<div class="modal fade text-black" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="termsModalLabel">Terms &amp; Conditions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <style>
            :root {
                --hero-height: 100vh;
                --overlay-start: rgba(0, 0, 0, 0.3);
                --overlay-end: rgba(0, 0, 0, 0.8);
                --primary-color: #4e73df;
                --accent-color: #f6c23e;
                --transition-speed: 0.5s;
            }

            /* HERO SECTION CONTAINER */
            .hero-container {
                position: relative;
                height: var(--hero-height);
                overflow: hidden;
            }

            /* Carousel item (each slide) styling */
            .hero-carousel-item {
                position: relative;
                height: var(--hero-height);
                background-size: cover;
                background-position: center;
            }

            .hero-carousel-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: brightness(0.75);
                transition: transform 10s ease;
            }

            .hero-carousel-item:hover img {
                transform: scale(1.05);
            }

            /* Gradient overlay for text readability */
            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(180deg, var(--overlay-start) 0%, var(--overlay-end) 100%);
                z-index: 1;
            }

            /* Caption container */
            .hero-content {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 2;
                color: #fff;
                text-align: center;
                padding: 0 20px;
            }

            .hero-content h1 {
                font-size: 4rem;
                font-weight: bold;
                margin-bottom: 1rem;
                animation: fadeInDown 1s ease-out;
            }

            .hero-content p {
                font-size: 1.5rem;
                max-width: 800px;
                margin: 0 auto 2rem;
                animation: fadeInUp 1s ease-out 0.5s;
                animation-fill-mode: both;
            }

            /* CTA Buttons Group */
            .hero-buttons .btn {
                margin: 0 10px;
                padding: 1rem 2rem;
                border: none;
                border-radius: 50px;
                font-size: 1rem;
                transition: background var(--transition-speed);
            }

            .btn-primary {
                background-color: var(--primary-color);
                color: #fff;
            }

            .btn-primary:hover {
                background-color: #3a5bb8;
            }

            .btn-secondary {
                background-color: var(--accent-color);
                color: #fff;
            }

            .btn-secondary:hover {
                background-color: #d9a21a;
            }

            @keyframes fadeInDown {
                from {
                    opacity: 0;
                    transform: translateY(-20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            /* Scroll Down Indicator */
            .scroll-indicator {
                position: absolute;
                bottom: 20px;
                left: 50%;
                transform: translateX(-50%);
                z-index: 3;
                cursor: pointer;
            }

            .scroll-indicator svg {
                width: 40px;
                height: 40px;
                fill: #fff;
                animation: bounce 2s infinite;
            }

            @keyframes bounce {

                0%,
                20%,
                50%,
                80%,
                100% {
                    transform: translateX(-50%) translateY(0);
                }

                40% {
                    transform: translateX(-50%) translateY(-10px);
                }

                60% {
                    transform: translateX(-50%) translateY(-5px);
                }
            }

            /* Carousel controls styling */
            .carousel-control-prev-icon,
            .carousel-control-next-icon {
                background-color: rgba(0, 0, 0, 0.5);
                padding: 20px;
                border-radius: 50%;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .hero-content h1 {
                    font-size: 2.5rem;
                }

                .hero-content p {
                    font-size: 1.25rem;
                }

                .hero-container {
                    height: 70vh;
                }
            }
        </style>


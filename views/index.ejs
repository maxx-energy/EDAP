<!-- Google Fonts: Using Oswald for headings and Open Sans for body -->
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">

<style>
  body, html {
    margin: 0;
    padding: 0;
    font-family: 'Open Sans', sans-serif;
    background: #000;
    overflow-x: hidden;
  }
  /* Full-screen Hero Section */
  .hero-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }
  .carousel-inner {
    height: 100vh;
  }
  .carousel-item {
    position: relative;
    height: 100vh;
  }
  .carousel-item img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    transform: scale(1.05);
    transition: transform 2s ease-in-out;
  }
  .carousel-item:hover img {
    transform: scale(1.1);
  }
  .carousel-item.active img {
    transform: scale(1);
  }
  /* Overlay for contrast */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.8));
    z-index: 1;
  }
  /* Centered Hero Content with no border or backdrop */
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    color: #fff;
    padding: 20px 30px;
    background: none; /* Removed any backdrop */
    opacity: 0;
    animation: popIn 1.2s ease-out forwards;
  }
  @keyframes popIn {
    from { opacity: 0; transform: translate(-50%, -45%) scale(0.9); }
    to { opacity: 1; transform: translate(-50%, -50%) scale(1); }
  }
  .hero-content h1 {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(3rem, 8vw, 6rem);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-shadow: 0 0 15px rgba(0,0,0,0.8);
  }
  .hero-content p {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    margin-bottom: 30px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 0 10px rgba(0,0,0,0.7);
  }
  /* Neon Pulse Buttons */
  .hero-buttons a {
    margin: 0 15px;
    padding: 15px 35px;
    border-radius: 50px;
    text-decoration: none;
    color: #fff;
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: neonPulse 2s infinite;
  }
  .hero-buttons a:hover {
    transform: scale(1.3);
    box-shadow: 0 0 30px rgba(255,255,255,0.9);
    animation: none;
  }
  @keyframes neonPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  .btn-primary {
    background-color: #ff4081;
    border: none;
  }
  .btn-secondary {
    background-color: #00e676;
    border: none;
  }
  /* Custom Dot Indicators */
  .carousel-indicators {
    bottom: 30px;
  }
  .carousel-indicators button {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: none;
    background-color: rgba(255,255,255,0.6);
    margin: 0 8px;
    transition: transform 0.3s, background-color 0.3s;
  }
  .carousel-indicators button:hover {
    transform: scale(1.1);
  }
  .carousel-indicators .active {
    background-color: #ff4081;
    transform: scale(1.4);
  }
</style>


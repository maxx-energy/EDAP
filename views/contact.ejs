<%- include('partials/_header.ejs') %>
<%- include('partials/_navigator.ejs') %>

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h2 class="mb-3 text-primary fw-bold">Contact Us</h2>
                <div class="divider-custom mx-auto mb-4">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-envelope"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <p class="text-muted">Please send us an email with your message, and we'll get back to you as soon as possible!</p>
            </div>
            
            <% if (messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i> <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
    
            <% if (messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <div class="card shadow border-0 rounded-lg mb-5">
                <div class="card-body p-4 p-md-5">
                    <form id="contactForm" action="/contact-message" method="POST">
                        <div class="mb-4">
                            <label for="fullName" class="form-label fw-medium">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-user text-primary"></i></span>
                                <input type="text" id="fullName" name="fullName" class="form-control border-0 bg-light" placeholder="Enter full name">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="email" class="form-label fw-medium">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-primary"></i></span>
                                <input type="email" id="email" name="email" class="form-control border-0 bg-light" placeholder="Enter your email">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="message" class="form-label fw-medium">Your Message</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-comment-alt text-primary"></i></span>
                                <textarea class="form-control border-0 bg-light" id="message" name="message" rows="5" placeholder="Enter your message"></textarea>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill">
                                <i class="fas fa-paper-plane me-2"></i>Submit Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="row contact-info text-center mb-5">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card h-100 border-0 shadow-sm py-4">
                        <div class="card-body">
                            <div class="icon-circle bg-primary text-white mx-auto mb-3">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <h5 class="fw-bold">Our Location</h5>
                            <p class="text-muted mb-0">123 Solar Way<br>Sunshine City, CA 90210</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card h-100 border-0 shadow-sm py-4">
                        <div class="card-body">
                            <div class="icon-circle bg-primary text-white mx-auto mb-3">
                                <i class="fas fa-phone"></i>
                            </div>
                            <h5 class="fw-bold">Phone Number</h5>
                            <p class="text-muted mb-0">(555) 123-4567<br>Mon-Fri, 9am-5pm</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card h-100 border-0 shadow-sm py-4">
                        <div class="card-body">
                            <div class="icon-circle bg-primary text-white mx-auto mb-3">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <h5 class="fw-bold">Email Us</h5>
                            <p class="text-muted mb-0">info@maxxenergy.com<br>support@maxxenergy.com</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mb-4">
                <h5 class="fw-bold">Connect With Us</h5>
                <div class="social-icons mt-3">
                    <a href="https://www.facebook.com/maxxpotentialllc/" target="_blank" class="social-icon mx-2 bg-primary"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://x.com/MaxxTechnology" target="_blank" class="social-icon mx-2 bg-primary"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.linkedin.com/company/maxx-potential" target="_blank" class="social-icon mx-2 bg-primary"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer.ejs') %>

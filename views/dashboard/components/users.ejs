<% if (isUserSignedIn) { %>
    <%- include('../dashboardPartials/_dashboardHeader.ejs') %>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-center">User List</h2>
                <form class="ms-5 w-50" action="/dashboard/users" method="GET">
                    <input type="search" class="form-control" placeholder="Search user..." name="search"
                        value="<%= locals.search || '' %>" onkeyup="filterUsers(event)"
                        aria-label="Search users" />
                </form>
            </div>
            <% if (messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
    
            <% if (messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userList">
                    <% users.forEach(user => { %>
                        <tr id="userRow-<%= user.employee_id %>">
                            <form action="/auth/update-profile" method="POST">
                                <td>
                                    <%= user.employee_id %>
                                    <input type="hidden" name="userId" value="<%= user.employee_id %>">
                                </td>
                                <td>
                                    <input type="text" class="border-0" name="firstName" value="<%= user.first_name %>" id="firstName-<%= user.employee_id %>" disabled>
                                </td>
                                <td>
                                    <input type="text" class="border-0" name="lastName" value="<%= user.last_name %>" id="lastName-<%= user.employee_id %>" disabled>
                                </td>
                                <td><%= user.email %></td>
                                <td>
                                    <select name="roleId" class="form-select" id="role-<%= user.employee_id %>" disabled>
                                        <option value="1" <%= user.role_id === 1 ? 'selected' : '' %>>Executive</option>
                                        <option value="2" <%= user.role_id === 2 ? 'selected' : '' %>>Director</option>
                                        <option value="3" <%= user.role_id === 3 ? 'selected' : '' %>>Manager</option>
                                        <option value="4" <%= user.role_id === 4 ? 'selected' : '' %>>Staff</option>
                                        <option value="5" <%= user.role_id === 5 ? 'selected' : '' %>>User</option>
                                    </select>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-primary <%= loggedUser.permissions >= 6 ? '' : 'disabled' %>" id="editBtn-<%= user.employee_id %>" onclick="toggleEdit('<%= user.employee_id %>')">
                                        <i id="editIcon-<%= user.employee_id %>" class="fas fa-pencil-alt"></i>
                                    </button>
                                    <button type="submit" class="btn btn-sm btn-success d-none" id="saveBtn-<%= user.employee_id %>">
                                        <i class="fas fa-save"></i>
                                    </button>
                                </td>
                            </form>
        
                            <!-- Delete Form -->
                            <form action="/auth/delete-user" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="userId" value="<%= user.employee_id %>">
                                <td>
                                    <button type="submit" class="btn btn-sm btn-danger <%= loggedUser.permissions !== 7 ? 'disabled' : '' %>">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </form>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

         <!-- Pagination -->
         <% if (totalPages> 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= current === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=1">
                            <i class="fas fa-angle-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item <%= current === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= current > 1 ? current - 1 : 1 %>">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                    <% for (let i=Math.max(1, current - 1); i <=Math.min(totalPages, current + 1); i++) { %>
                        <li class="page-item <%= i === current ? 'active' : '' %>">
                            <a class="page-link" href="/dashboard/users/?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    <li class="page-item <%= current === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= current + 1 %>">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item <%= current === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= totalPages %>">
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <% } %>
    </div>

    <script>
        function toggleEdit(userId) {
            const firstNameInput = document.getElementById(`firstName-${userId}`);
            const lastNameInput = document.getElementById(`lastName-${userId}`);
            const roleSelect = document.getElementById(`role-${userId}`);
            const editBtn = document.getElementById(`editBtn-${userId}`);
            const saveBtn = document.getElementById(`saveBtn-${userId}`);

            if (firstNameInput.disabled) {
                // Enable inputs
                firstNameInput.disabled = false;
                lastNameInput.disabled = false;
                roleSelect.disabled = false;
                // Hide edit button
                editBtn.classList.add('d-none');
                // Show save button
                saveBtn.classList.remove('d-none');

                firstNameInput.classList.add('form-control');
                firstNameInput.classList.remove('border-0');
                lastNameInput.classList.add('form-control');
                lastNameInput.classList.remove('border-0');
            } else {
                // Disable inputs after saving
                firstNameInput.disabled = true;
                lastNameInput.disabled = true;
                roleSelect.disabled = true;

                // Hide save button
                saveBtn.classList.add('d-none');
            }
        }

        function filterUsers(event) {
            const searchTerm = event.target.value.toLowerCase();
            const rows = document.querySelectorAll('#userList tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        }
    </script>

    <%- include('../dashboardPartials/_dashboardFooter.ejs') %>
<% } %>
